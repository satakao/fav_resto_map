<!DOCTYPE html>
<html>

  <head>
    <title>RestaurantMap</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/<%= ENV['FONT_AWESOME_KEY'] %>.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-dark" style="color: #291b25">

        <div class="container-fluid">
          <a href="/" class="navbar-brand ml-5 text-light">fav_resto_map</a>

            <button class="navbar-toggler" type="button"
              data-toggle="collapse"
              data-target="#navbarNavDropdown"
              aria-controls="navbarNavDropdown"
              aria-expanded="false"
              aria-label="Toggle navigation">
              <span class="navbar-toggler-icon" style="color: #291b25"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">

              <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>


                <li>
                  <%= link_to posts_path, class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-house fa-2x"></i>
                  <% end %>
                </li>

                <li>
                  <%= link_to users_path(current_user), class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-users fa-2x"></i>
                  <% end %>
                </li>

                <li>
                  <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-right-from-bracket fa-2x"></i>
                  <% end %>
                </li>

              <% elsif admin_signed_in? %>

                <li>
                  <%= link_to admin_path, class: 'nav-link text-light' do %><i class="fa-solid fa-house"></i><% end %>
                </li>

                <li>
                  <%= link_to admin_users_path, class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-users fa-2x"></i>
                  <% end %>
                </li>

                 <li>
                  <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-right-from-bracket fa-2x"></i>
                  <% end %>
                </li>

              <% else %>

                <li>
                  <%= link_to new_user_session_path, method: :get,class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-right-to-bracket fa-2x"></i>
                  <% end %>
                </li>

              <% end %>
              </ul>

              <%= form_with url: searches_search_path, method: :get do |f| %>

                <%= f.text_field :word %>
                <%= f.select :range, options_for_select([["User"],["Post"]]) %>
                <%= f.select :search, options_for_select([["完全一致","perfect_match"],["部分一致","partial_match"]]) %>
                <%= f.submit "検索" %>

              <% end %>

            </div>

          </div>

        </div>

      </nav>
    </header>


    <main style="min-height:120vh ;position: relative;padding-bottom:50px;box-sizing:border-box;">
      <div class="mypage_main row no-gutters">
        <div class="side col-md-1 col-lg-1 fixed-top">
        <div class="sidebar bg-dark">
          <ul class="nav flex-column">
            <li class="nav_item1">
              <%= link_to users_mypage_path, class: 'nav-link text-light' do %>
                 <i class="fa-solid fa-circle-user fa-2x"></i>
              <% end %>
            </li>
            <li class="nav_item2">
              <!--content_for :add_content ブロックがある場合その中身を呼び出す-->
              <% if content_for? :add_content %>
                <%= yield :add_content %>
              <% end %>

            </li>
            <li class="nav_item3">
              <a class="nav-link" href="#">Pricing</a>
            </li>
          </ul>
        </div>
      </div>

      <%= yield %>
    </main>
    <footer>

    </footer>

  </body>

</html>
