<div class="container-fluid">

  <p id="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div class="row justify-content-center">

    <div class="log_in col-12-fluid text-center">

      <h2 class="contents-title d-flex justify-content-start align-items-center mr-4 ml-4">管理者ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :メールアドレス, style: 'margin-right: 40px;' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", style: 'width: 300px;' %>
        </div>

        <div class="field mt-3">
          <%= f.label :パスワード, style: 'margin-right: 70px;' %>
          <%= f.password_field :password, autocomplete: "current-password", style: 'width: 300px;' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions text-center">
          <%= f.submit "ログイン",class: 'btn btn-primary' %>
        </div>

      <% end %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>