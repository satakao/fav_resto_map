<div class="container">

  <div class="row justify-content-center align-items-center">

    <div class="col-6 text-center">



      <% @posts.each do |post| %>

        <div class="post-card">

          <%= image_tag post.user.get_profile_image %>

          <%=link_to user_path(post.user) do  %>
            <%= post.user.name %>
          <% end %><br>

          <%=link_to post_path(post.id) do %>
            <%= image_tag post.image, size:"300x300" %><br>
          <% end %>
          <p class="post-solid" ></p>

          <!--ブックマークボタン-->
          <div class="bookmark" id="bookmark_button_<%= post.id %>">
            <%= render "member/bookmarks/bookmark_btn", post: post %>
          </div><br>

            <%= post.address %><br>

            <%= post.store_name %><br>

            <%= post.description %><br>

        </div>

      <% end %>

    </div>

  </div>

</div>
