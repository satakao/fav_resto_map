<div class="container">

  <div class="row justify-content-center align-items-center">

    <div class="col-6 text-center">

      <% @posts.each do |post| %>

        <div class="post-card">

          <%= image_tag post.user.get_profile_image %>

          <%=link_to user_path(post.user) do  %>
            <%= post.user.name %>
          <% end %><br>

          <%=link_to post_path(post.id) do %>
            <%= image_tag post.image, size:"300x300" %><br>
          <% end %>
          <p class="post-solid" ></p>

          <!--ブックマークボタン-->
          <div class="d-inline-block" id="bookmark_button_<%= post.id %>">
            <%= render "member/bookmarks/bookmark_btn", post: post %>
          </div>

          &emsp;<i class="fa-regular fa-comment"></i>コメント数：<%= post.post_comments.count %><br>

            <%= post.address %><br>

            <%= post.store_name %><br>

            <%= post.description %><br>

        </div>

      <% end %>

    </div>

  </div>

</div>
