<div class="container">

  <div class="row">

    <div class="col text-center">

      <%= image_tag @user.get_profile_image %>

      <%= @user.name %>

      <% if @post.user == current_user %>

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
         投稿編集
        </button>

        <!--投稿モーダルフォーム-->
        <%= render 'member/posts/form', post: @post %>

      <% end %><br>

      <%= image_tag @post.image, size:"300x300" %><br>

      <!--いいねボタン-->
      <%= render "member/favorites/favorite_btn", post: @post %>


      <%= @post.store_name %><br>

      <%= @post.description %><br>

      <%= render "member/posts/post_comment", post: @post, post_comment: @post_comment %>

    </div>

  </div>

</div>

