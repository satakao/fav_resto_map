<div class="container-fluid text-center">

  <p class="d-inline-block">タグリスト:</p>
  <!--タグ名リスト-->
  <% @tag_list.each do |tag|%>

    <%=link_to tag.name,post_search_tag_path(tag) %>

    <%= tag.posts.where(is_published: true).count %>

  <% end %>

  <h3 class="contents-title">タグ：[<%=@tag.name%>] に関する投稿一覧</h3>

  <p>店名/料理名:</p>

  <div class="row">

    <% @posts.each do |post| %>

      <div class="col-2">
        <!--投稿カード-->
        <div class="mini-post-card text-center d-inline-block">

          <%=link_to post_path(post.id) do %>

            <%= post.store_name.truncate(10) %><br>
            <%= image_tag post.image, class: "mini-post-image", size:"150x150" %><br>

          <% end %>

          <i class="fa-regular fa-bookmark"></i>ブックマーク数:<%= post.bookmarks.count %><br>

          <%= render "member/posts/static_rate", post: post %>

          <%= post.address.truncate(10) %><br>

          <%= post.description.truncate(15) %>

        </div>

      </div>

    <% end %>

  </div>

</div>