<div class="container-fluid">

 <%= render "layouts/errors", obj: @user %>

  <div class="row">

    <div class="col-4"></div>

    <div class="contents col-4">
      <h2>ユーザー情報編集</h2>
      <%= form_with model: @user, method: :patch do |f| %>

        <div class="form-group">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>

        <div class="form-group">
          <%= f.label :image, "画像" %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>

        <div class="form-group d-inline-block">
          <%= f.submit "ユーザー情報更新", class: 'btn btn-success' %>
        </div>
        <%=link_to "退会する",user_path(@user.id), method: :delete, data: { confirm: "この#{@user.name}のアカウントを削除しますか？"}, class:"btn btn-danger pr-5 pl-5 d-inline-block float-right" %>
      <% end %>

    </div>

  </div>

</div>
