<div class="container">
  
  <div class="row">
    
    <div class="col">
      <%= form_with model: @user, method: :patch do |f| %>
      
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>

        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>

        <div class="form-group">
          <%= f.submit class: 'btn btn-secondary' %>
        </div>
      <% end %>

      <%=link_to "退会する",user_path(@user.id), method: :delete, class:"btn btn-danger" %>

    </div>
  </div>
</div>
