<div class="container-fluid">

  <%= render "member/shared/error_messages", resource: resource %>

  <div class="row justify-content-center">

    <div class="sign_up col-12-fluid">

      <h2 class="contents-title d-flex justify-content-start align-items-center mr-4 ml-4">ユーザー新規登録</h2>

      <%= form_with model: @user, url:user_registration_path, method: :post, local: true do |f| %>

        <div class="field mr-3 ml-3">
          <%= f.label :name,"名前" %><br />
          <%= f.text_field :name, autofocus: true, placeholder:"Yamdda Taro", autocomplete: "name" %>
        </div>
        <div class="fieldmr-3 ml-3">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email,size:"40*20", autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %>
        </div>

        <div class="field mr-3 ml-3">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" ,style: 'width: 330px;'%>
        </div>

        <div class="field mr-3 ml-3">
          <%= f.label :password_confirmation, "パスワード確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",style: 'width: 330px;' %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録",class:"btn btn-primary ml-3 mt-3" %>
        </div>
      <% end %>

      <%= render "member/shared/links" %>
    </div>
  </div>
</div>
