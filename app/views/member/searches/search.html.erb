<div class="container-fluid">

  <div class="row justify-content-center align-items-center mt-4">

    <div class="col-8 text-center">
     <h2 class="contents-title">検索結果 "<span><%= @search %></span>"</h2>
    </div>

    <div class="col-12">

      <table class="table table-hover table-inverse">
        <% if @range == "User" %>

            <tbody>
              <tr>
                <th>ユーザー画像</th>
                <th>名前</th>
              </tr>

              <% @users.each do |user| %>

                <tr>
                  <td>
                    <%=link_to user_path(user.id) do %>
                      <%= image_tag user.get_profile_image, class:"rounded-circle", size:"80x80" %>
                    <% end %>
                  </td>

                  <td>
                    <%=link_to user_path(user.id) do %>
                      <%= user.name %>
                    <% end %>
                  </td>
                </tr>

              <% end %>

            </tbody>

        <% elsif @range == "Post"%>

         <tbody>
            <tr>
              <th>ユーザー画像</th>
              <th>名前</th>
              <th>店名/料理名</th>
              <th>投稿画像</th>
              <th>ブックマーク</th>
            </tr>

            <% @posts.each do |post| %>

            <tr>
              <td><%= image_tag post.user.get_profile_image, class:"rounded-circle", size:"60x60" %></td>

              <td>
                <%=link_to user_path(post.user.id) do %>
                  <%= post.user.name %>
                <% end %>
              </td>

              <td>
                <%=link_to post_path(post.id) do %>
                  <%= post.store_name %>
                <% end %>
              </td>

              <td>
                <%=link_to post_path(post.id) do %>
                  <%= image_tag post.image, class:"td-image", size:"100x100" %>
                <% end %>
              </td>

              <td>
                <div id="bookmark_button_<%= post.id %>">
                  <%= render "member/bookmarks/bookmark_btn", post: post %>
                </div>
              </td>

            </tr>

            <% end %>

          </tbody>

        <% end %>

      </table>

    </div>

  </div>

</div>
<span id="top-scroll">
  <a href="">
　  <%= image_tag asset_path("top-scroll.png"), turbolinks: false, class: "arrow" %>
　</a>
</span>